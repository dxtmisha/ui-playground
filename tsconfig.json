{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "cc2/**/*.ts",
    "cc2/**/*.d.ts",
    "cc2/**/*.tsx",
    "cc2/**/*.vue",
    "classes/**/*.ts",
    "classes/**/*.tsx",
    "commands/**/*.ts",
    "composables/**/*.ts",
    "constructors/**/*.ts",
    "constructors/**/*.tsx",
    "functions/**/*.ts",
    "m3/**/*.ts",
    "m3/**/*.d.ts",
    "m3/**/*.tsx",
    "m3/**/*.vue",
    "md2/**/*.ts",
    "md2/**/*.d.ts",
    "md2/**/*.tsx",
    "md2/**/*.vue",
    "media/templates/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "stories/**/*.ts",
    "types/**/*.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}

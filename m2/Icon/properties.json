{
  "main": "{d.icon}",
  "rounded": {
    "border-radius": "{rounded}"
  },
  "size": {
    "xs": {
      "width": "{ref.spacing.6}"
    },
    "sm": {
      "width": "{ref.spacing.8}"
    },
    "md": {
      "width": "{ref.spacing.10}",
      "border-radius": "{rounded.full}"
    },
    "lg": {
      "width": "{ref.spacing.14}",
      "font": "{font.headline6}",
      "border-radius": "{rounded.sm}"
    },
    "xl": {
      "width": "{ref.spacing.px}*100",
      "aspect-ratio-width": "100/56",
      "font": "{font.headline5}",
      "border-radius": "{rounded.none}"
    }
  },
  "overlay": {
    "background-opacity": "{sys.opacity.overlay}"
  },
  "dynamic": {
    "hover": {
      "gradient-opacity": "{sys.opacity.hover}"
    },
    "focus": {
      "gradient-opacity": "{sys.opacity.focus}"
    },
    "active": {
      "gradient-opacity": "{sys.opacity.pressed}"
    }
  }
}
